extends base

block title #{ booru.users.user.username }} - profile{% endblock %}

block left
	a(href="user_list") All users

block main
	h1 #{ user.nickname }
	p Full name:
		| #{ user.name }
	img(src="{{ usr.userpic.url }}", alt="{{ usr.user.username }}'s avatar")
	p Register date: {{ usr.user.date_joined|date:"d M Y H:i" }}
	a(href="/") Return to the homepage.

